{
  "name": "wechat-message-mock",
  "version": "0.0.8",
  "description": "",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testRegex": "test/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenwei1202/wechat-message-mock.git"
  },
  "author": "Vincent Wen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenwei1202/wechat-message-mock/issues"
  },
  "homepage": "https://github.com/wenwei1202/wechat-message-mock#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.33",
    "@types/camelcase": "^4.1.0",
    "coveralls": "^2.12.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.2",
    "typescript": "^2.5.3",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "camelcase": "^4.1.0",
    "ejs": "^2.5.6",
    "wechat-crypto": "0.0.2"
  },
  "engines": {
    "node": ">=8.0"
  }
}
